{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build with Makefile",
			"type": "shell",
			"command": "make",
			"args": [
				"-C",
				"${workspaceFolder}/cpp_09/ex00/"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": {
				"owner": "cpp",
				"fileLocation": [
					"relative",
					"${workspaceFolder}/cpp_09/ex00/"
				],
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			}
		}
	]
}